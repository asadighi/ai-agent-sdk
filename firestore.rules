rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all meshes and their subcollections
    match /meshes/{meshId} {
      allow read, write: if true;
      
      match /agents/{agentId} {
        allow read, write: if true;
      }
      
      match /events/{eventId} {
        allow read, write: if true;
      }
    }
  }
}