{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@ai-agent/mesh/types": ["./packages/types/src"],
      "@ai-agent/mesh/common": ["./packages/common/src"],
      "@ai-agent/mesh/browser": ["./packages/browser/src"],
      "@ai-agent/mesh/cli": ["./packages/cli/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/browser"
    },
    {
      "path": "./packages/cli"
    }
  ]
}