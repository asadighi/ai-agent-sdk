{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "incremental": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "types": ["jest"]
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/common-sdk" },
    { "path": "./packages/firebase" },
    { "path": "./packages/tests" }
  ]
} 