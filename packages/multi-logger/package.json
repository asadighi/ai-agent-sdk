{
  "name": "@ai-agent/multi-logger",
  "version": "0.0.1",
  "private": true,
  "description": "A multi-platform logging system",
  "workspaces": [
    "packages/*",
    "packages/types",
    "packages/node",
    "packages/web",
    "packages/ui"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:types": "pnpm --filter @ai-agent/multi-logger/types build",
    "build:node": "pnpm --filter @ai-agent/multi-logger/node build",
    "build:web": "pnpm --filter @ai-agent/multi-logger/web build",
    "build:ui": "pnpm --filter @ai-agent/multi-logger/ui build",
    "test": "pnpm -r test",
    "test:types": "pnpm --filter @ai-agent/multi-logger/types test",
    "test:node": "pnpm --filter @ai-agent/multi-logger/node test",
    "test:web": "pnpm --filter @ai-agent/multi-logger/web test",
    "test:ui": "pnpm --filter @ai-agent/multi-logger/ui test",
    "lint": "pnpm -r lint",
    "lint:types": "pnpm --filter @ai-agent/multi-logger/types lint",
    "lint:node": "pnpm --filter @ai-agent/multi-logger/node lint",
    "lint:web": "pnpm --filter @ai-agent/multi-logger/web lint",
    "lint:ui": "pnpm --filter @ai-agent/multi-logger/ui lint",
    "clean": "pnpm -r clean",
    "clean:types": "pnpm --filter @ai-agent/multi-logger/types clean",
    "clean:node": "pnpm --filter @ai-agent/multi-logger/node clean",
    "clean:web": "pnpm --filter @ai-agent/multi-logger/web clean",
    "clean:ui": "pnpm --filter @ai-agent/multi-logger/ui clean",
    "dev": "pnpm -r --parallel dev",
    "dev:ui": "pnpm --filter @ai-agent/multi-logger/ui dev"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0"
  }
} 